doctype html
html(lang='en')
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no')
    title Game List #{title}
    // CSS
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    link(href='css/materialize.css', type='text/css', rel='stylesheet', media='screen,projection')
    link(href='css/style.css', type='text/css', rel='stylesheet', media='screen,projection')
  body
    nav.white(role='navigation')
      .nav-wrapper.container
        a#logo-container.brand-logo(href='#') ChatMini
        ul.right.hide-on-med-and-down
          li
            a(href='/') Play Game
        ul#nav-mobile.side-nav
          li
            a(href='/') Play Game
        a.button-collapse(href='#', data-activates='nav-mobile')
          i.material-icons menu
    .container
      .section
        .row
          .col.m12
            form(action='/login', method='post')
              .row
                .input-field.col.s12
                  input#username.validate(type='text', name='username')
                  label(for='username') Username
                .input-field.col.s4
                  button.btn.waves-effect.waves-light.green(type='submit') Create !!
    // Scripts
    script(src='https://code.jquery.com/jquery-2.1.1.min.js')
    script(src='js/materialize.js')
